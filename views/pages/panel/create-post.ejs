<div class="col-lg-12 d-flex align-items-stretch">
  <div class="card w-100">
    <div class="p-3">
      <a href="/post/create" class="btn btn-danger">بازگشت به همه ی دسته ها</a>
    </div>
    <div class="p-3">
      <ul>
        <li>
          <a href="?slug=" class="w-100 p-3 d-block bg-light text-dark">
            <span class="ti nav-small-cap-icon fs-4"></span>
            <span>test</span>
          </a>
        </li>
      </ul>
      <form action="/post/create" method="post" enctype="multipart/form-data">
        <input type="hidden" name="lat" id="lat" />
        <input type="hidden" name="lng" id="lng" />
        <input type="hidden" name="category" id="category" value="" />
        <div class="p-2">
          <label>آدرس ایمیل</label>
          <div id="map-element" class="w-100" style="height: 300px"></div>
        </div>
        <div class="p-2">
          <label>تصاویر آگهی</label>
          <input type="file" name="images" multiple class="form-control" />
        </div>
        <div class="p-2">
          <label>عنوان آگهی</label>
          <input
            type="text"
            name="title_post"
            placeholder="عنوان آگهی"
            class="form-control"
          />
        </div>
        <div class="p-2">
          <label>توضیحات آگهی</label>
          <textarea
            class="form-control"
            name="description"
            placeholder="توضیحات آگهی"
          ></textarea>
        </div>
        <div class="p-2">
          <label>مبلغ با قیمت آگهی جهت نمایش</label>
          <input
            type="text"
            name="amount"
            placeholder="مبلغ"
            class="form-control"
          />
        </div>
        <label></label>
        <div class="p-2">
          <select name="" class="form-select">
            <option value=""></option>
          </select>
        </div>
        <div class="p-2">
          <input type="text" name="" class="form-control" placeholder="" />
        </div>
        <button type="submit" class="btn btn-danger">انتشار آگهی</button>
      </form>
    </div>
  </div>
</div>
